<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MLTable">
        <!--<item name="android:layout_marginTop">@dimen/mltable_margin_top_bottom</item>-->
        <item name="android:layout_marginBottom">@dimen/mltable_margin_top_bottom</item>
        <item name="android:layout_marginLeft">@dimen/mltable_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/mltable_margin_left_right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MLTableRow">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@drawable/mltable_row_background</item>
    </style>

    <style name="MLTableTitle" parent="@style/Widget.ATableViewCell.TextLabel.Bold">
        <item name="android:layout_marginLeft">@dimen/mltable_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/mltable_margin_left_right</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
